{
  "name": "aloha_api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "test": "yarn test:unit && yarn test:functional",
    "start:local": "ts-node-dev --transpile-only src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:functional": "jest --projects ./test --runInBand",
    "test:unit": "jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abraaocrvlh42/aloha_api.git"
  },
  "keywords": [
    "Aloha",
    "Node",
    "Nodejs",
    "Typescript",
    "Api",
    "Forecast"
  ],
  "author": "Abra√£o Carvalho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abraaocrvlh42/aloha_api/issues"
  },
  "homepage": "https://github.com/abraaocrvlh42/aloha_api#readme",
  "description": "Aloha is an API where you can check wave, tide and weather forecasts to enjoy the beach surfing.",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "body-parser": "^2.2.1",
    "express": "^5.1.0",
    "module-alias": "^2.2.3"
  }
}
